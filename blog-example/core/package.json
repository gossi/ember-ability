{
  "name": "@my-blog/core",
  "private": true,
  "files": [
    "declarations",
    "dist"
  ],
  "exports": {
    "./*": {
      "types": "./declarations/*.d.ts",
      "default": "./dist/*"
    }
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:js": "pnpm swc src/ --out-dir dist/",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "concurrently 'npm:start:*'",
    "start:js": "pnpm swc src/ --out-dir dist/ -w",
    "start:types": "tsc --emitDeclarationOnly -w",
    "test": "jest"
  },
  "dependencies": {
    "ember-ability": "workspace:*"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^0.12.0",
    "@gossi/config-prettier": "^0.8.0",
    "@jest/globals": "^29.7.0",
    "@pollyjs/core": "^6.0.6",
    "@swc/cli": "^0.5.1",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@types/eslint": "^9.6.1",
    "chokidar": "^4.0.1",
    "concurrently": "^9.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">= 18"
  }
}
