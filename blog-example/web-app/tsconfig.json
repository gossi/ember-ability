{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@my-blog/web-app/tests/*": [
        "tests/*"
      ],
      "@my-blog/web-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    // make type checking work:
    // "skipLibCheck": false,
    // allow tests to compile for ember versions below v3
    "noEmitOnError": false
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}