{
  "extends": "@ember/app-tsconfig",
  "include": [
    "src", "tests", "types"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  },
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "#/*": [
        "./src/*"
      ],
      // "@my-blog/web-app/tests/*": [
      //   "./tests/*"
      // ],
      "*": [
        "./types/*"
      ]
    },
    "types": [
      "ember-source/types",
      "@embroider/core/virtual",
      "vite/client"
    ]
  },
}
