{
  "name": "ember-ability",
  "version": "0.0.1",
  "description": "ember owner as destructable object",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/gossi/ember-ability",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "types": "dist/",
  "files": [
    "addon-main.js",
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "release": "release-it",
    "start": "rollup --config --watch"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.3",
    "ember-container": "^0.0.3",
    "ember-resources": "^5.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/runtime": "^7.19.0",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.0",
    "@babel/plugin-syntax-decorators": "^7.19.0",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/plugin-transform-typescript": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-typescript": "^7.18.6",
    "@embroider/addon-dev": "^1.8.3",
    "@gossi/config-eslint": "^0.6.0",
    "@gossi/config-prettier": "^0.1.3",
    "@gossi/config-targets": "^0.1.3",
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@types/eslint": "^8.4.6",
    "@types/ember__owner": "^4.0.0",
    "@types/ember__service": "^4.0.0",
    "@types/inflection": "^1.13.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "prettier": "^2.7.1",
    "release-it": "^15.4.1",
    "rollup": "^2.79.0",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.js",
    "app-js": {}
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*",
    "./addon-main.js": "./addon-main.js"
  }
}
