{
  "name": "ember-ability",
  "version": "0.1.1",
  "description": "Connect your pure guards, questions or abilities with Ember's owner.",
  "keywords": [
    "ember-addon",
    "guards",
    "queries",
    "abilities",
    "questions"
  ],
  "license": "MIT",
  "author": "Thomas Gossmann",
  "repository": "https://github.com/gossi/ember-ability",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "declarations",
    "addon-main.cjs"
  ],
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./declarations/*.d.ts",
      "default": "./dist/*"
    },
    "./addon-main.js": "./addon-main.cjs"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:js": "rollup --config",
    "build:types": "glint --declaration",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "glint",
    "prepack": "pnpm build",
    "release": "release-it",
    "start": "concurrently 'npm:start:*'",
    "start:js": "rollup --config -w --no-watch.clearScreen",
    "start:types": "glint --declaration -w"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.6",
    "ember-sweet-owner": "^0.2.0"
  },
  "peerDependencies": {
    "ember-resources": ">=5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@embroider/addon-dev": "^7.0.0",
    "@glint/core": "^1.5.0",
    "@glint/environment-ember-loose": "^1.5.0",
    "@glint/template": "^1.5.0",
    "@gossi/config-eslint": "^0.12.0",
    "@gossi/config-prettier": "^0.8.0",
    "@gossi/config-targets": "^0.9.0",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@tsconfig/ember": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "concurrently": "^9.1.0",
    "ember-source": "~6.0.1",
    "ember-resources": "^6.5.1",
    "eslint": "^8.56.0",
    "eslint-plugin-ember": "^12.1.1",
    "prettier": "^3.2.5",
    "release-it": "^17.10.0",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": "18.* || >= 20"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {}
  },
  "volta": {
    "extends": "../package.json"
  }
}
