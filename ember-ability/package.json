{
  "name": "ember-ability",
  "version": "0.1.1",
  "description": "Connect your pure guards, questions or abilities with Ember's owner.",
  "keywords": [
    "ember-addon",
    "guards",
    "queries",
    "abilities",
    "questions"
  ],
  "license": "MIT",
  "author": "Thomas Gossmann",
  "repository": "https://github.com/gossi/ember-ability",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "declarations",
    "addon-main.cjs"
  ],
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./declarations/*.d.ts",
      "default": "./dist/*"
    },
    "./addon-main.js": "./addon-main.cjs"
  },
  "scripts": {
    "build": "rollup --config",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "glint",
    "prepack": "pnpm build",
    "release": "release-it",
    "start": "concurrently 'npm:start:*'",
    "start:js": "rollup --config -w --no-watch.clearScreen",
    "start:types": "glint --declaration -w",
    "dev": "vite dev",
    "test": "vite build --mode=development && testem --file testem.cjs ci --port 0"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.6",
    "decorator-transforms": "^2.2.2",
    "ember-sweet-owner": "^0.2.0"
  },
  "peerDependencies": {
    "ember-resources": ">=5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-transform-typescript": "^7.25.2",
    "@babel/runtime": "^7.25.6",
    "@ember/library-tsconfig": "^1.1.3",
    "@ember/test-helpers": "^5.2.1",
    "@embroider/addon-dev": "^8.0.1",
    "@embroider/core": "^4.1.0",
    "@embroider/compat": "^4.1.0",
    "@embroider/macros": "^1.18.0",
    "@embroider/vite": "^1.1.5",
    "@glint/core": "^1.5.2",
    "@glint/environment-ember-loose": "^1.5.2",
    "@glint/environment-ember-template-imports": "^1.5.2",
    "@glint/template": "^1.5.2",
    "@gossi/config-eslint": "^0.14.0",
    "@gossi/config-prettier": "^0.10.0",
    "@gossi/config-targets": "^0.10.0",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@tsconfig/ember": "^3.0.8",
    "@types/qunit": "^2.19.12",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "babel-plugin-ember-template-compilation": "^2.2.5",
    "concurrently": "^9.1.0",
    "ember-qunit": "^9.0.2",
    "ember-resolver": "^13.1.0",
    "ember-source": "^6.3.0",
    "ember-template-lint": "^7.7.0",
    "ember-resources": "^7.0.4",
    "eslint": "^8.56.0",
    "eslint-plugin-ember": "^12.1.1",
    "prettier": "^3.2.5",
    "qunit": "^2.24.1",
    "qunit-dom": "^3.4.0",
    "release-it": "^17.10.0",
    "rollup": "^4.43.0",
    "testem": "^3.15.1",
    "typescript": "^5.7.2",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs"
  },
  "volta": {
    "extends": "../package.json"
  }
}
